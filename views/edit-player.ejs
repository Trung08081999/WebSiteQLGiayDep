<%- include("partials/header") -%>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (player) { %>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">            
                <div class="form-group col-md-6">
                    <label for="first-name">Shoes Company</label>
                    <input type="text" class="form-control" name="Name" id="Name" value="<%= player.Name %>" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="first-name">Price</label>
                    <input type="text" class="form-control" name="Price" id="Price" value="<%= player.Price %>" required>
                </div>                        
                <div class="form-group col-md-6">
                    <label for="number">Amount</label>
                    <input type="number" class="form-control" name="Amount" id="Amount" placeholder="Số Lượng" value="<%= player.Amount%>" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="Status">Status</label>
                    <select id="Status" name="Status" class="form-control" required>                      
                        <option>Are Coming</option>
                        <option>Sold Out</option>
                        <option>Stocking</option> 
                    </select>
                </div>            
            <button type="submit" class="form-group btn btn-success col-md-6">Update Product</button>
        </form>
    <% } else { %>
        <p class="text-center">Product Not Found. Go <a href="/add">here</a> to add product.</p>
    <% } %>
</div>
</div>
</body>
</html>