<body class="container">

    <div class='jumbotron'>
        <form style="width: 50%; margin: auto;" class="form-signin" method="POST" action="/login">
            <h2 class="text-center ">VanTrung Store</h2>
            <h6 class="text-center ">Always with you on all the roads !!!</h6>
            <br>

            <!-- <label for="inputEmail" class="sr-only">Username</label> -->
            <input style="margin-bottom: 5px;" type="username" id="inputEmail" name="username" class="form-control" placeholder="Username" required
                autofocus>

            <!-- <label for="inputPassword" class="sr-only">Password</label> -->
            <input type="password" id="inputPassword" name="password" class="form-control" placeholder="Password"
                required>

            <br />

            <button class="btn btn-lg btn-default btn-block" type="submit">Sign in</button>
        </form>
    </div>
</body>

</html>